# =============================================================================
# QRI Trading Organization - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# Heavy LLM Configuration (Complex reasoning, planning, leadership)
# =============================================================================
# Used for: CEO, CIOs, CROs, Research Heads, Discretionary traders
LLM_PROVIDER=lmstudio
LLM_MODEL=qwen2.5-72b-instruct
LLM_BASE_URL=http://192.168.178.181:1234/v1
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# =============================================================================
# Light LLM Configuration (Simple tasks, tool calling, operations)
# =============================================================================
# Used for: Operators, Execution, Risk monitors, Operations
LLM_LIGHT_PROVIDER=lmstudio
LLM_LIGHT_MODEL=qwen2.5-7b-instruct
LLM_LIGHT_BASE_URL=http://192.168.178.181:1234/v1
LLM_LIGHT_TEMPERATURE=0.3
LLM_LIGHT_MAX_TOKENS=2048

# =============================================================================
# Embeddings Configuration (Ollama)
# =============================================================================
# Used for: Knowledge sources, memory, document retrieval
EMBEDDER_PROVIDER=ollama
EMBEDDER_MODEL=nomic-embed-text
EMBEDDER_BASE_URL=http://192.168.178.181:11434

# =============================================================================
# Kraken Spot API Credentials
# =============================================================================
# Get your API keys from: https://www.kraken.com/u/settings/api
# Required permissions: Query Funds, Query Open Orders, Query Closed Orders,
#                       Query Trades, Query Ledger, Create & Modify Orders
KRAKEN_API_KEY=your_spot_api_key_here
KRAKEN_API_SECRET=your_spot_api_secret_here

# =============================================================================
# Kraken Futures API Credentials
# =============================================================================
# Get your API keys from: https://futures.kraken.com/settings/api
# Required permissions: Access, Trade, Withdraw (for internal transfers)
KRAKEN_FUTURES_API_KEY=your_futures_api_key_here
KRAKEN_FUTURES_API_SECRET=your_futures_api_secret_here

# =============================================================================
# Risk Settings
# =============================================================================
# Minimum balance threshold to consider as zero
KRAKEN_BALANCE_MIN_THRESHOLD=0.000001

# Maximum leverage allowed (1 = no leverage)
MAX_LEVERAGE_SPOT=1
MAX_LEVERAGE_FUTURES=10

# Risk mode: normal, reduced, defensive
# - normal: Full risk limits
# - reduced: 50% of normal limits
# - defensive: 25% of normal limits, no new positions
RISK_MODE=normal

# =============================================================================
# Crew Settings
# =============================================================================
# Enable verbose logging for crews
CREW_VERBOSE=true

# Enable memory for crews (persistent context)
CREW_MEMORY=true

# Rate limit (requests per minute) to avoid overwhelming LLM
CREW_MAX_RPM=60

# =============================================================================
# Firecrawl Configuration (Web Scraping)
# =============================================================================
# Local Firecrawl instance - no API key required
FIRECRAWL_API_URL=http://192.168.178.200:3002
# Leave empty for local instance without authentication
FIRECRAWL_API_KEY=
